# ==========================================
# AI DEBUGGER FACTORY - ENVIRONMENT CONFIG
# Copy this file to .env and fill in your values
# ==========================================

# Core Application Settings
APP_NAME=AI Debugger Factory
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your_super_secret_key_here_generate_new_one
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/dreamengine_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# CORS Settings (Adjust for your domain)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://yourdomain.com"]

# ==========================================
# LLM API KEYS (At least one required)
# ==========================================

# OpenAI (Required for voice and primary LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_TEMPERATURE=0.7
OPENAI_RATE_LIMIT_TPM=100000
OPENAI_VOICE_MODEL=whisper-1

# Anthropic Claude (Recommended for advanced reasoning)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini (Optional backup)
GOOGLE_API_KEY=your_google_api_key_here

# Default LLM Provider (openai, anthropic, google, or auto)
DEFAULT_LLM_PROVIDER=auto

# ==========================================
# VOICEBOTICS CONFIGURATION (Revolutionary)
# ==========================================

# Voice API Settings
VOICE_API_KEY=your_openai_voice_key
VOICE_LANGUAGE=en
VOICE_TIMEOUT=60
SUPPORTED_VOICE_FORMATS=webm,mp4,mpeg,mpga,m4a,wav,flac,ogg

# Text-to-Speech (ElevenLabs for premium voices)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ==========================================
# SMART CONTRACTS (Patent-worthy)
# ==========================================

# Blockchain Configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your_project_id
SMART_CONTRACT_ADDRESS=your_contract_address
PRIVATE_KEY=your_private_key_for_contract_deployment

# Revenue Sharing Settings
PLATFORM_REVENUE_SHARE=0.15
FOUNDER_REVENUE_SHARE=0.85

# ==========================================
# GITHUB INTEGRATION
# ==========================================

# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# ==========================================
# BUSINESS INTELLIGENCE APIs
# ==========================================

# Market Research APIs
SERPAPI_KEY=your_serpapi_key_for_market_research
RAPID_API_KEY=your_rapidapi_key

# ==========================================
# DREAMENGINE CONFIGURATION
# ==========================================

# Generation Settings
DREAMENGINE_DEFAULT_PROVIDER=auto
DREAMENGINE_MAX_TOKENS=8192
DREAMENGINE_TEMPERATURE=0.7
DREAMENGINE_STREAMING_ENABLED=true
DREAMENGINE_STREAMING_CHUNK_SIZE=1024
DREAMENGINE_STREAMING_MAX_CONNECTIONS=10
DREAMENGINE_CACHE_ENABLED=false
DREAMENGINE_CACHE_TTL=3600
DREAMENGINE_RATE_LIMIT=100
DREAMENGINE_RATE_LIMIT_PERIOD=3600
DREAMENGINE_SECURITY_SCAN_ENABLED=true
DREAMENGINE_LOG_LEVEL=INFO

# ==========================================
# REDIS CONFIGURATION (for real-time features)
# ==========================================

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ==========================================
# SECURITY SETTINGS
# ==========================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Security
API_KEY_SALT=your_api_key_salt_here
HTTP_TIMEOUT=60

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Sentry (Error Monitoring)
SENTRY_DSN=your_sentry_dsn_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================
# DEPLOYMENT SETTINGS
# ==========================================

# Production Settings
RELOAD=true